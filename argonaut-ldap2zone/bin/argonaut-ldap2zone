use strict;
use warnings;

use 5.008;

use Argonaut::Ldap2zone qw(argonaut_ldap2zone);

my $zone_arg = undef;
my $verbose_arg = 0;

sub print_usage
{
  print "Usage : ldap2zone [--verbose] ZONE\n";
  exit(0);
}

my $i_arg = 0;

foreach my $arg ( @ARGV ) {
  if (lc($arg) eq "--verbose") {
    $verbose_arg = 1;
  } elsif ($i_arg==0) {
    $zone_arg = $arg;
    $i_arg++;
  } else {
    print_usage();
  }
}

if (!$zone_arg) {
  print_usage();
}

argonaut_ldap2zone($zone_arg,$verbose_arg);
