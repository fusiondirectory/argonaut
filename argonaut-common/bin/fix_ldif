use strict;

use 5.008;

use MIME::Base64;

my $buffer= "";

while (<STDIN>) {
  chomp;
  if ($_ =~ /^[a-zA-Z0-9]/) {

    if ($buffer) {
      if ($buffer =~ /^dn::/){
        $buffer =~ /^([^:]+):: (.*)$/;
        $buffer= "$1: ".decode_base64($2);
      }
      print $buffer."\n";
    }
    $buffer= $_;
    next;
  }

  if ($_ =~ /^ (.*)$/) {
    $buffer.= $1;
    next;
  }
}

if ($buffer) {
  if ($buffer =~ /^dn::/){
    $buffer =~ /^([^:]+):: (.*)$/;
    $buffer= "$1: ".decode_base64($2);
  }
  print $buffer."\n";
}

__END__

