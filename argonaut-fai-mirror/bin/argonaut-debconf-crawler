use strict;
use warnings;

use 5.008;

use Config::IniFiles;

use Argonaut::Common qw(:net);
use Argonaut::Packages qw(get_packages_info, store_packages_file, cleanup_and_extract);

my $configfile = "/etc/argonaut/argonaut.conf";
my $config = Config::IniFiles->new( -file => $configfile, -allowempty => 1, -nocase => 1);

my $servpath                =   $config->val( repository => "path"                  ,"/srv/www/debian");
my $interface               =   $config->val( repository => "interface"             ,"eth0");
my $iptool                  =   $config->val( network => "iptool"                   ,"/sbin/ifconfig");

argonaut_get_mac($interface);

=pod
=item cleanup_and_extract
Extract templates from packages.
Templates are saved as $servdir/debconf.d/release/section/nameofthepackage

=cut

store_packages_file($mymac); # FIXME : should be replaced by an mv+extract (no getstore in this case).
cleanup_and_extract($servpath,get_packages_info($mymac,undef,["package","version","filename"]));

print "done\n";
