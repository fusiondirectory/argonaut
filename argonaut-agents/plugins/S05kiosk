#NAME:Applying KDE policies

if [ -x /usr/sbin/argonaut-install-kiosk-profile ]; then
	sudo /usr/sbin/argonaut-install-kiosk-profile
fi

#
# Disabling kpersonalizer (First-Run-Wizard)
#
if [ ! -d $HOME/.kde/share/config ]; then
	mkdir -p $HOME/.kde/share/config
fi

cat <<EOF > $HOME/.kde/share/config/kpersonalizerrc
[General]
FirstLogin=false
EOF

