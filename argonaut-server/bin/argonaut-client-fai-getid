use strict;
use warnings;
use 5.010;

use JSON::RPC::Client;
use Config::IniFiles;

=pod
This program ask the argonaut-server for the assigned taskid for the fai installation.
It store the info into the file specified in the config file.
=cut

my $iptool = "ifconfig";
my $configfile = "/etc/argonaut/argonaut.conf"

my $myMac = chomp(`LANG=C $iptool $interface | awk '/$interface/{ print \$5 }'`);
my $config = Config::IniFiles->new( -file => $configfile, -allowempty => 1, -nocase => 1);

my $server_port                     =   $config->val( network => "server_port"        ,8080);
my $server_ip                       =   $config->val( network => "server_ip"          ,"");

my $file                            =   $config->val( client => "file"                ,"/tmp/argonaut");
my $interface                       =   $config->val( client => "interface"           ,"eth0");

my $client = new JSON::RPC::Client;
$client->version('1.0');

my $callobj = {
  method  => "get_my_id",
  params  => [$myMac],
};

my $taskid = $client->call("http://".$server_ip.":".$server_port, $callobj);

if(!$taskid || $taskid->is_error) {
    die "Error : ", $taskid->error_message."\n";
}

open (ID, ">$file") or die "cannot write in $file";
print ID $taskid;
close(ID);
